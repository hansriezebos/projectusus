<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<!-- Copyright (c) 2009 by USUS contributors -->
<plugin>
   <!-- Perspective and Views -->
   <extension point="org.eclipse.ui.perspectives">
      <perspective
            id="org.projectusus.ui.internal.perspective.USUSPerspective"
            icon="icons/full/eview16/usus.gif"
            class="org.projectusus.ui.internal.perspective.USUSPerspective"
            name="%perspective_name"/>
   </extension>
   <extension point="org.eclipse.ui.views">
      <category
            id="org.projectusus.ui.viewCategory"
            name="%viewCategory_name"/>
      <view class="org.projectusus.ui.internal.yellowcount.YellowCountView"
            icon="icons/full/eview16/yellowcount.gif"
            id="org.projectusus.ui.internal.yellowcount.YellowCountView"
            category="org.projectusus.ui.viewCategory"
            name="%yellowcount_view_name"/>
      <view class="org.projectusus.ui.internal.proportions.CockpitView"
            icon="icons/full/eview16/cockpit.gif"
            id="org.projectusus.ui.internal.proportions.CockpitView"
            category="org.projectusus.ui.viewCategory"
            name="%cockpit_view_name"/>
      <view class="org.projectusus.ui.internal.hotspots.HotSpotsView"
            icon="icons/full/eview16/hotspots.gif"
            id="org.projectusus.ui.internal.hotspots.HotSpotsView"
            category="org.projectusus.ui.viewCategory"
            name="%hotspots_view_name"/>
      <view class="org.projectusus.ui.internal.history.HistoryView"
            icon="icons/full/eview16/history.gif"
            id="org.projectusus.ui.internal.history.HistoryView"
            category="org.projectusus.ui.viewCategory"
            name="%history_view_name"/>
      <view class="org.projectusus.ui.internal.coveredprojects.CoveredProjectsView"
            icon="icons/full/eview16/coveredprojects.gif"
            id="org.projectusus.ui.internal.coveredprojects.CoveredProjectsView"
            category="org.projectusus.ui.viewCategory"
            name="%coveredprojects_view_name"/>
   </extension>
   <!-- register page book pages for model objects -->
   <extension point="org.eclipse.core.runtime.adapters">
       <factory
             adaptableType="org.projectusus.core.internal.proportions.model.CodeProportion"
             class="org.projectusus.ui.internal.hotspots.PageFactory">
          <adapter type="org.projectusus.ui.internal.hotspots.pages.IHotspotsPage" />
       </factory>
   </extension>
   <!-- view actions --> 
   <extension point="org.eclipse.ui.viewActions">
      <viewContribution
            id="org.projectusus.ui.internal.proportions.CockpitView.ViewContribution"
            targetID="org.projectusus.ui.internal.proportions.CockpitView">
         <action
               class="org.projectusus.ui.internal.proportions.actions.RefreshCockpit"
               icon="icons/full/elcl16/refresh.gif"
               id="org.projectusus.ui.internal.proportions.actions.RefreshCockpit"
               label="%refreshCockpit_label"
               style="push"
               toolbarPath="additions"
               tooltip="%refreshCockpit_tooltip"/>
      </viewContribution>
      <viewContribution
            id="org.projectusus.ui.internal.yellowcount.YellowCountView.ViewContribution"
            targetID="org.projectusus.ui.internal.yellowcount.YellowCountView">
         <action
               class="org.projectusus.ui.internal.yellowcount.actions.DeleteCheckpoints"
               icon="icons/full/elcl16/delete_checkpoints.gif"
               id="org.projectusus.ui.internal.yellowcount.actions.DeleteCheckpoints"
               label="%yellowCount_deleteCheckpoints_label"
               style="push"
               toolbarPath="additions/handlelog"
               tooltip="%yellowCount_deleteCheckpoints_tooltip"/>
         <action
               class="org.projectusus.ui.internal.yellowcount.actions.OpenCheckpoints"
               icon="icons/full/elcl16/open_checkpoints.gif"
               id="org.projectusus.ui.internal.yellowcount.actions.OpenCheckpoints"
               label="%yellowCount_openCheckpoints_label"
               style="push"
               toolbarPath="additions/handlelog"
               tooltip="%yellowCount_openCheckpoints_tooltip"/>
         <action
               class="org.projectusus.ui.internal.yellowcount.actions.AddCheckpoint"
               icon="icons/full/elcl16/add_checkpoint.gif"
               id="org.projectusus.ui.internal.yellowcount.actions.AddCheckpoint"
               label="%yellowCount_addCheckpoint_label"
               style="push"
               toolbarPath="additions/add"
               tooltip="%yellowCount_addCheckpoint_tooltip"/>
      </viewContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.projectusus.ui.internal.projectsettings.ApplyProjectSettings"
            commandId="org.projectusus.ui.projectsettings.apply">
      </handler>
      <handler
            class="org.projectusus.ui.internal.projectsettings.CopySettingsFromProject"
            commandId="org.projectusus.ui.projectsettings.copyFromProject">
      </handler>
   </extension>
   <extension point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="org.projectusus.ui.projectsettings.apply"
               label="%packageExplorer_menu_apply"
               style="push">
         </command>
         <command
               commandId="org.projectusus.ui.projectsettings.copyFromProject"
               label="%packageExplorer_copy_from_project_command"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.ui.commands">
      <command
            id="org.projectusus.ui.projectsettings.apply"
            name="%apply_command">
      </command>
      <command
            id="org.projectusus.ui.projectsettings.copyFromProject"
            name="%copy_from_project_command">
      </command>
   </extension>
</plugin>
